{
  "name": "ignite-docs-rag",
  "version": "1.0.0",
  "description": "RAG backend for Ticketmaster Ignite React Native documentation",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "tsx src/server.ts",
    "start:prod": "node dist/src/server.js",
    "ingest": "tsx scripts/ingestDocs.ts",
    "ingest:demo": "tsx scripts/ingestDemo.ts",
    "test:retrieval": "tsx scripts/testRetrieval.ts",
    "db:migrate": "tsx scripts/migrate.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src scripts --ext .ts",
    "test": "jest"
  },
  "keywords": [
    "rag",
    "documentation",
    "ticketmaster",
    "ignite",
    "vector-search"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "pgvector": "^0.1.8",
    "openai": "^4.28.0",
    "dotenv": "^16.4.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "zod": "^3.22.4",
    "cheerio": "^1.0.0-rc.12",
    "turndown": "^7.1.2",
    "node-fetch": "^3.3.2",
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/pg": "^8.10.9",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.16",
    "@types/turndown": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
